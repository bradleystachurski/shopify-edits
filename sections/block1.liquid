<div class="block-data">
{% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
  		<section class="section-{{ forloop.index }}" {% if block.settings.image %}style="background: url('{{ block.settings.image | img_url: '1024x1024' }}') no-repeat center center transparent;"{% endif %} {{ block.shopify_attributes }}>
          <div class="wrapper">
    		<h1>{% if block.settings.title != blank %}{{ block.settings.title | escape }}{% endif %}</h1>
			<p>{% if block.settings.text != blank %}{{ block.settings.text }}{% endif %}</p>
			<p>
  				<a {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %} title="{{ block.settings.button_label | escape }}" class="btn">
               		{{ block.settings.button_label | escape }}
              	</a>
			</p>
  		  </div>
        </section>
    {% endfor %}
  {% endif %}
</div>
{% schema %}
{
  "name": "Block1",
  "class": "block1",
  "max_blocks": 1,
  "blocks": [
    {
      "type": "image",
      "name": "BG Image for Block 1",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title For Block 1",
          "default": "Image"
        },
        {
          "type": "html",
          "id": "text",
          "label": "Text",
          "default": "Sub title for Block 1."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label for block 1",
          "default": "View all"
        }	
		
      ]
    }
  ]
}
{% endschema %}

