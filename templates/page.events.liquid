{% if settings.pages-breadcrumb-show %}
<div class="row full-width">
  <div class="columns">
    {% include 'snippet-breadcrumbs' %}
  </div>
  <div class="row full-width"><h1 class="page-title">{{ page.title }}</h1></div>
</div>
{% endif %}
<style>
  h2.event-title { text-align: left; color:#8970F4; }
  .event { color: #000; border: 2px solid #fff; margin: 10px 0 0 0; padding: 10px; background-color: #FFF;}
  .details img { display: none; }
  img.event-image { width: 30%; float: left; }
  .details { float: left; width: 70%; padding: 10px;}
  @media (max-width: 700px) {
    img.event-image { float: none; width: 100%; }
  	.details { float: none; width: 100%;}
  }
</style>

<section class="athletes">
  <div class="row full-width">
  {% for link in linklists.events-list.links %}
    <div class="event columns large-12" style="margin: 20px 0;">
      {% if link.object.content contains '<img' %}
      {% assign src = link.object.content | split: 'src="' %}
      {% assign src = src[1] | split: '"' | first %}
      <img class="event-image" src='{{src}}'>	
      {% endif %}
      {% assign title = link.object.title %}
      <div class="details">
        <h2 class="event-title">{{title}}</h2>
        {{ link.object.content }}
      </div>
    </div>
  {% endfor %}
  </div>
</section>
<section class="row social-share" style="max-width: 100%; text-align: center;">
  <div class="columns center">
    {% include 'snippet-page-share' %}
  </div>
</section>